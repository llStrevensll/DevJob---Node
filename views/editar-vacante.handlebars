<main class="contenedor">
    <form action="/vacantes/editar/{{vacante.url}}" method="POST" class="default-form">
        <h3>Informaci贸n General</h3>

        <div class="campo">
            <label>Titulo</label>
            <input type="text" name="titulo" value="{{vacante.titulo}}" placeholder="Ej: React Developer" required>
        </div>
        <div class="campo">
            <label>Empresa</label>
            <input type="text" name="empresa" value="{{vacante.empresa}}" placeholder="Empresa Contrata" required>
        </div>
        <div class="campo">
            <label>Ubicaci贸n</label>
            <input type="text" name="ubicacion" value="{{vacante.ubicacion}}" placeholder="Ej: Pais o Remoto" required>
        </div>
        <div class="campo">
            <label>Salario</label>
            <input type="text" name="salario" value="{{vacante.salario}}" placeholder="Ej: $500 USD" required>
        </div>
        <div class="campo">
            <label>Contrato</label> 
            <select name="contrato">
                {{#tipoContrato vacante.contrato}}
                    <option value="" disabled selected>-- Selecciona --</option>
                    <option value="Freelance">Freelance</option>
                    <option value="Tiempo Completo">Tiempo Completo</option>
                    <option value="Medio Tiempo">Medio Tiempo</option>
                    <option value="Por Proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripci贸n del Puesto</h3>
        <div class="campo descripcion">
            <label>Descripci贸n</label>
            <input type="hidden" id="x" value="{{vacante.descripcion}}" name="descripcion">
            <trix-editor input="x"> </trix-editor>
        </div>

        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}} {{! seleccionarSkills -> encontrado en helpers-handlebars}}
            {{/seleccionarSkills}} {{!cierre}}
        </ul>

        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">{{!inyectar con js las habilidades id=skills -> app.js}}
            <input type="submit" value="Guardar Cambios" class="btn btn-azul">
        </div>
    </form>
</main>